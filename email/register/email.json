{
  "subject": "Votre inscription aux Flamboyants",
  "messageHtml": "<!DOCTYPE html\n  PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">\n<html xmlns=\"http://www.w3.org/1999/xhtml\">\n\n<head>\n  <meta http-equiv=\"Content-Type\" content=\"text/html; charset=utf-8\" />\n  <title>Les Flamboyants | Location vacances</title>\n  <style type=\"text/css\">\n    body {\n      margin: 0;\n      padding: 0;\n      min-width: 100% !important;\n    }\n\n    .content {\n      width: 100%;\n      max-width: 600px;\n      border-radius: 10px !important;\n    }\n\n    .logo {\n      vertical-align: center !important;\n    }\n\n    @media screen and (max-width: 600px) {\n      .content {\n        max-width: 85%;\n      }\n    }\n  </style>\n</head>\n\n<body bgcolor=\"#efefef\">\n  <table width=\"100%\" bgcolor=\"#efefef\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n    <tr width=\"100%\">\n      <td height=\"50\">\n        &nbsp;\n      </td>\n    </tr>\n    <tr>\n      <td>\n        <table class=\"content\" width=\"600\" bgcolor=\"#FFFFFF\" align=\"center\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n          <tr>\n            <td>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr>\n                  <td class=\"logo\" align=\"center\" width=\"100%\" height=\"90\">\n                    <img width=\"70\" height=\"70\" src=\"https://dominiquetalis.com/les_flamboyants_logo.png\" alt=\"logo\" style=\"height: 70px; width: auto; display: block;\" />\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"15\">\n                  <td width=\"100%\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr>\n                  <td width=\"30\">\n                    &nbsp;\n                  </td>\n                  <td width=\"540\" align=\"left\" style=\"font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;\">\n                    Bonjour {{ userFirstname }},\n                  </td>\n                  <td width=\"30\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"30\">\n                  <td width=\"100%\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr>\n                  <td width=\"30\">\n                    &nbsp;\n                  </td>\n                  <td width=\"540\" align=\"left\" style=\"font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;\">\n                    <p style=\" margin-top: 0;\">\n                    Merci pour votre confiance. Votre compte est bien enregistré avec l'adresse email <b>{{ userEmail }}</b>. Si vous avez des questions, n'hésitez pas à nous <a href=\"/contact\" target=\"_blank\">recontacter</a> \n                    </p>\n                    <p style=\"margin-top: 0;\">\n                      Cordialement.\n                    </p>\n                    <p style=\"margin: 0;\">\n                      <b>L'équipe des Flamboyants</b>\n                    </p>\n                  </td>\n                  <td width=\"30\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"15\">\n                  <td width=\"100%\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\" bgcolor=\"#efefef\">\n                <tr width=\"100%\" height=\"1\">\n                  <td width=\"100%\">\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"15\">\n                  <td width=\"100%\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"30\">\n                  <td width=\"30\">\n                    &nbsp;\n                  </td>\n                  <td width=\"540\" align=\"left\" style=\"font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;\">\n                    <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                      <tr>\n                        <td align=\"center\">\n                          <table cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                            <tr>\n                              <td align=\"center\">\n                                <a href=\"#\" target=\"_blank\" title=\"Facebook\">\n                                  <img src=\"https://dominiquetalis.com/facebook.png\" alt=\"facebook icon\"\n                                    style=\"display: block !important;\" />\n                                </a>\n                              </td>\n                              <td width=\"10\">\n                                &nbsp;\n                              </td>\n                              <td align=\"center\">\n                                <a href=\"#\" target=\"_blank\"\n                                  title=\"Instagram\">\n                                  <img src=\"https://dominiquetalis.com/instagram.png\" alt=\"instagram icon\"\n                                    style=\"display: block !important;\" />\n                                </a>\n                              </td>\n                            </tr>\n                          </table>\n                        </td>\n                      </tr>\n                    </table>\n                  </td>\n                  <td width=\"30\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"10\">\n                  <td width=\"100%\" style=\"font-size: 10px !important;\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"15\">\n                  <td width=\"100%\" align=\"center\"\n                    style=\"font-size: 14px !important; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;\">\n                    Tous droits réservés © Les Flamboyants 2025\n                  </td>\n                </tr>\n              </table>\n              <table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\n                <tr height=\"15\">\n                  <td width=\"100%\">\n                    &nbsp;\n                  </td>\n                </tr>\n              </table>\n            </td>\n          </tr>\n        </table>\n      </td>\n    </tr>\n    <tr width=\"100%\">\n      <td height=\"50\">\n        &nbsp;\n      </td>\n    </tr>\n  </table>\n</body>\n\n</html>",
  "messagePlainText": "{{ userFirstname }}, Merci pour votre confiance. Votre compte est bien enregistré avec l'adresse email {{ userEmail }}. Si vous avez des questions, n'hésitez pas à nous recontacter."
}
